<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerMobile.Pages.PageMain"
             Title="ВИЛКА И НОЖ"
             Appearing="ContentPage_Appearing">
    <VerticalStackLayout>
        <Grid Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="{Binding BPhoto}" Grid.Column="0" Margin="10,10,10,10"></Image>
            <StackLayout Grid.Column="1">
                <Label Text="{Binding Title}" FontSize="30" Padding="10,15,0,0"></Label>
                <Label Text="{Binding Description}" FontSize="15" Padding="10,10,0,0"></Label>
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>