<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerMobile.Pages.PageOtzav"
             Title="ВИЛКА И НОЖ"
             Loaded="ContentPage_Loaded">
    <VerticalStackLayout>
        <Label 
            Text="Отзывы" FontSize="19"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView x:Name="ListOtzas" HorizontalOptions="Center">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackLayout Orientation="Horizontal" WidthRequest="20">
                            <Label Text="{Binding Id}" FontSize="17"></Label>
                            <Label Text="." FontSize="17"></Label>
                        </StackLayout>
                        <Label Text="{Binding Text}" FontSize="17" Grid.Column="1"></Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="NewOtzav" Clicked="NewOtzav_Clicked"  Text="Новый отзыв"></Button>
    </VerticalStackLayout>
</ContentPage>