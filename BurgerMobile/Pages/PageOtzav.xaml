<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerMobile.Pages.PageOtzav"
             Title="ВИЛКА И НОЖ"
             Appearing="ContentPage_Appearing">
    <VerticalStackLayout>
        <Label 
            Text="Отзывы" FontSize="23"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView x:Name="ListOtzas" Margin="0,10,0,10" HorizontalOptions="Center">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Source="zvezdayes.png" WidthRequest="50" HeightRequest="50" VerticalOptions="Start"></Image>
                        <Label Text="{Binding Kol}" FontSize="19" Margin="19,13,0,0"></Label>
                        <Label Text="{Binding Text}" FontSize="15" Grid.Column="1" Margin="10,10,0,0"></Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="NewOtzav" Clicked="NewOtzav_Clicked"  Text="Новый отзыв"></Button>
    </VerticalStackLayout>
</ContentPage>