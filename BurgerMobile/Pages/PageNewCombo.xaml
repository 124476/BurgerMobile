<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerMobile.Pages.PageNewCombo"
             Title="PageNewCombo"
             Loaded="ContentPage_Loaded">
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="Title" FontSize="17" HorizontalOptions="Center"/>
        <Entry x:Name="BTitle" FontSize="17"></Entry>
        <Label Text="Sum" FontSize="17" HorizontalOptions="Center"/>
        <Entry x:Name="BSum" FontSize="17"></Entry>
        <Label Text="Burgers" FontSize="17" HorizontalOptions="Center"></Label>
        <CollectionView x:Name="ListBurgers" SelectionMode="Single" SelectionChanged="ListBurgers_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Title}" FontSize="17"></Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Picker x:Name="ComboBurgers" SelectedIndexChanged="ComboBurgers_SelectedIndexChanged" FontSize="17" ItemDisplayBinding="{Binding Title}"></Picker>
        <Button Text="Сохранить" FontSize="17" Clicked="Button_Clicked"></Button>
        <Button Text="Назад" FontSize="17" Clicked="Back_Clicked" x:Name="Back"></Button>
    </VerticalStackLayout>
</ContentPage>