<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerMobile.Pages.PageCombo"
             Title="ВИЛКА И НОЖ"
             Loaded="ContentPage_Loaded">
    <VerticalStackLayout>
        <Label 
            Text="Комбо"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="19"/>
        <CollectionView x:Name="ListBurgerCombo" SelectionMode="Single" SelectionChanged="ListBurgerCombo_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Title}" FontSize="17" HorizontalOptions="Center"></Label>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="NewCombo" FontSize="17" Clicked="NewCombo_Clicked" Text="Новое комбо"></Button>
    </VerticalStackLayout>
</ContentPage>