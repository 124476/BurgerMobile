<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerMobile.Pages.PageCombo"
             Title="ВИЛКА И НОЖ"
             Appearing="ContentPage_Appearing">
    <VerticalStackLayout>
        <Label 
            Text="Комбо"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="23"/>
        <CollectionView x:Name="ListBurgerCombo" SelectionMode="Single" SelectionChanged="ListBurgerCombo_SelectionChanged" Margin="0,10,0,5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="* " FontSize="17" Padding="30,8,0,0"></Label>
                        <Label Text="{Binding Title}" FontSize="17" HorizontalOptions="Start" Padding="4,5,0,10"></Label>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="NewCombo" FontSize="17" Clicked="NewCombo_Clicked" Text="Новое комбо"></Button>
    </VerticalStackLayout>
</ContentPage>